<div class="row">
  <div id="movies" class="col s12 m4">
    <h1 class="center"> Movies </h1>
    <div class="row">
      <!-- <button class="btn waves-effect col s2 offset-s5"><%= link_to 'New Movie', new_movie_path %></button> -->
      <%= link_to 'New Movie', new_movie_path, :class => 'btn waves-effect col s4 offset-s4' %>
    </div>
  </div>
  <div class="col s12 m8 query">
    <br />
    <%=form_tag title_path do %>
    <div class="input-field">
      <div class="row">
        <div class="col s12 m8">
          <label for="lookup search"><i class="material-icons">search</i>Title</label>
          <%= hidden_field_tag :type, "Title" %>
          <%= text_field_tag :lookup %>
          <%= submit_tag "Submit", :class => 'btn waves-effect' %>
        </div>
      </div>
    </div>
    <% end %>

    <br />

    <%=form_tag genre_path do %>
    <div class="input-field">
      <div class="row">
        <div class="col s12 m8">
          <label for="lookup search"><i class="material-icons">search</i>Genre</label>
          <%= hidden_field_tag :type, "Genre" %>
          <%= text_field_tag :lookup %>
          <%= submit_tag "Submit", :class => 'btn waves-effect' %>
        </div>
      </div>
    </div>
    <% end %>

    <br />

    <%=form_tag actor_path do %>
    <div class="input-field">
      <div class="row">
        <div class="col s12 m8">
          <label for="lookup search"><i class="material-icons">search</i>Actor</label>
          <%= hidden_field_tag :type, "Actor" %>
          <%= text_field_tag :lookup %>
          <%= submit_tag "Submit", :class => 'btn waves-effect' %>
        </div>
      </div>
    </div>
    <% end %>

  </div>
</div>

<div class="container">
  <div class=" row contact">
        <% @movies.each do |movie| %>
          <div class="col s12 m4">
            <div class="card deep-purple lighten-3 hoverable">
              <div class="card-content white-text">
                <h2 class="center"><%= movie.title %></h2>
                <h5 class="center"><%= movie.genre %></h5>
                <h5 class="center"><%= movie.actor %></h5>
                  <div class="row">
                    <hr>
                    <div class="col s4 center">
                      <%= link_to 'Show', movie_path(movie) %>
                    </div>
                    <div class="col s4 center">
                      <%= link_to 'Edit', edit_movie_path(movie) %>
                    </div>
                    <div class="col s4 center">
                      <%= link_to 'Destroy', movie, method: :delete %>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        <% end %> 
    </div>
  </div>
